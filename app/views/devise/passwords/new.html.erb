<div class="contain flex h-screen w-full items-center justify-center p-2">
  <div class="wrapper p-8 border border-4 border-black border-double w-fit">
    <h1 class="max-sm:text-3xl text-4xl">Forgot your password?</h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field my-2">
        <p><%= f.label :email %></p>
        <p><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-black bg-stone-50" %></p>
      </div>

      <div class="actions my-2">
        <%= f.submit "Send me password reset instructions",class: "w-full bg-orange-50 hover:bg-black font-semibold text-black hover:text-orange-50 py-2 px-2 border border-black hover:border-black border-4 border-double rounded shadow-md" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>