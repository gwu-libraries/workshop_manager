{
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "trailingComma": "none",
  "rubyArrayLiteral": true,
  "rubyHashLabel": true,
  "rubyModifier": true,
  "rubySingleQuote": true,
  "rubyToProc": false,
  "plugins": ["@prettier/plugin-ruby"],
  "overrides": [
    {
      "files": "*.erb",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "erb",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.html.erb",
      "options": {
        "parser": "html"
      }
    }
  ]
}  