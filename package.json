{
  "devDependencies": {
    "@prettier/plugin-ruby": "^4.0.4",
    "esbuild": "^0.25.3",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "autoprefixer": "^10.4.21",
    "nodemon": "^3.1.7",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.0",
    "sass": "^1.80.5",
    "tailwindcss": "^4.1.5"
  },
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
