<% case @workshop.registration_modality %>
  <% when "application_required"%>
    <%= render partial: "workshop_participants/application_status_form",
              collection: @workshop.workshop_participants.pending.order('created_at asc'),
              as: :workshop_participant %>

    <%= render partial: "workshop_participants/application_status_form",
              collection: @workshop.workshop_participants.waitlisted,
              as: :workshop_participant %>
<% end %>


<% case @workshop.attendance_modality %>
  <% when "individual"%>
    <%= render partial: "workshop_participants/attendance_status_form", 
              collection: @workshop.workshop_participants.accepted.order('created_at asc'),
              as: :workshop_participant %>
  <% when "collective" %>
    <%= render partial: "workshops/group_attendance_form" %>
<% end %>