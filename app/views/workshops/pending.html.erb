<h1>
  Pending Workshops
</h1>
 
 <%= month_calendar(events: @workshops) do |date, workshops| %>
  <%= date %>

  <% workshops.each do |workshop| %>
      <div class="max-w-sm m-1 p-2 bg-red-200 border border-red-200 rounded-lg shadow-sm">
        <%= link_to workshop.title, workshop_path(workshop.id) %>
        <br>
        <%= "#{human_readable_time(workshop.start_time)} - #{human_readable_time(workshop.end_time)}" %>
        <br>
        <% case workshop.presentation_modality %>
          <% when "virtual"%>
            <div>Location: 🖥️</div>
          <% when "in_person"%>
            <div>Location: 📚</div>
          <% when "hybrid" %>
            <div>Location: 📚 or 🖥️</div>
        <% end %>

        <% case workshop.registration_modality %>
          <% when "application_required"%>
            <div> Application Required </div>
          <% when "registration_required"%>
            <div> Registration Required </div>
        <% end %>
      </div>
  <% end %>
<% end %>