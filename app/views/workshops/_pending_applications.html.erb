<% case @workshop.registration_modality %>
  <% when "application_required"%>
    <%= render partial: "participants/application_status_form",
              # todo fix fix fix
              collection: @workshop.participants.pending.order('created_at asc'),
              as: :participant %>

    <%= render partial: "participants/application_status_form",
              collection: @workshop.participants.waitlisted,
              as: :participant %>
<% end %>


<% case @workshop.attendance_modality %>
  <% when "individual"%>
    <%= render partial: "participants/attendance_status_form", 
              # todo fix fix fix
              collection: @workshop.participants.accepted.order('created_at asc'),
              as: :participant %>
  <% when "collective" %>
    <%= render partial: "workshops/group_attendance_form" %>
<% end %>