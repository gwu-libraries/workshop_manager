<%= simple_form_for FeedbackQuestion.new do |f| %>
  <%= f.label :prompt %>
  <%= f.input_field :prompt,
                    class: 'flex w-full shadow appearance-none border 
                    border-gray-300 rounded p-2 bg-white focus:outline-none 
                    focus:border-blue-500 text-gray-400 leading-4 
                    transition-colors duration-200 ease-in-out' %>
  
  <%= f.label :question_format %>
  <%= f.input_field :question_format, 
                    as: :radio_buttons, 
                    collection: ['true_false', 'likert', 'short_answer', 'long_answer'] %>

  <%= f.hidden_field :workshop_id, 
                     value: @workshop.id %>
                     
  <%= f.submit "Save question", class: 'my-2 bg-blue-500 hover:bg-blue-700 text-white font-bold 
                                          text-sm py-2 px-4 rounded'  %>
<% end %>
